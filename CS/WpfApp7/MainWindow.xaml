<dx:ThemedWindow
    x:Class="WpfApp7.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="750"
    mc:Ignorable="d">

    <Grid>

        <dxdiag:DiagramDesignerControl
            x:Name="diagramControl1"
            SelectedStencils="BasicShapes"
            AddingNewItem="DiagramDesignerControl_AddingNewItem"
            BeforeItemsMoving="DiagramDesignerControl_BeforeItemsMoving"
            ItemsMoving="DiagramDesignerControl_ItemsMoving"/>
    </Grid>

</dx:ThemedWindow>
